<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_template">
    <t t-call="web.external_layout">
        <div class="page">
            <main>
                <h2>Daily Sales Report</h2>
                <p><strong>From:</strong> <t t-esc="data['start_date']"/> <strong>To:</strong> <t t-esc="data['end_date']"/></p>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Order No</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="orders" t-as="order">
                            <tr>
                                <td><t t-esc="order['order_no']"/></td>
                                <td><t t-esc="order['date']"/></td>
                                <td><t t-esc="order['customer']"/></td>
                                <td><t t-esc="order['amount']"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </main>
        </div>
    </t>
</template>



</odoo>

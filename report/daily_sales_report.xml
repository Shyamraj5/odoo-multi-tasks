<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_template">
        <t t-call="web.html_container">
            <!-- Correctly calling the reservation report header template -->
            <t t-call="odoo_multi_tasks.reservation_report">
                <div class="page" style="font-family: Arial, sans-serif; padding: 20px;">
                    <main style="margin-top: 20px;">
                        <!-- Title Section -->
                        <h2 style="text-align: center; color: #4A90E2; border-bottom: 2px solid #4A90E2; padding-bottom: 10px; font-size: 24px;">
                            Daily Sales Report
                        </h2>

                        <!-- Date Range Section -->
                        <p style="text-align: center; font-size: 14px; color: #333;">
                            <strong style="color: #4A90E2;">From:</strong> <t t-esc="data['start_date']"/> 
                            <strong style="color: #4A90E2;">To:</strong> <t t-esc="data['end_date']"/>
                        </p>

                        <!-- Table Section -->
                        <table style="width: 100%; border-collapse: collapse; margin-top: 20px; font-size: 14px;">
                            <thead>
                                <tr style="background-color: #4A90E2; color: white; text-align: left;">
                                    <th style="padding: 10px; border-bottom: 2px solid #ddd;">Order No</th>
                                    <th style="padding: 10px; border-bottom: 2px solid #ddd;">Date</th>
                                    <th style="padding: 10px; border-bottom: 2px solid #ddd;">Customer</th>
                                    <th style="padding: 10px; border-bottom: 2px solid #ddd;">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="orders" t-as="order">
                                    <tr>
                                        <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                                            <t t-esc="order['order_no']"/>
                                        </td>
                                        <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                                            <t t-esc="order['date']"/>
                                        </td>
                                        <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                                            <t t-esc="order['customer']"/>
                                        </td>
                                        <td style="padding: 8px; border-bottom: 1px solid #ddd; text-align: right;">
                                            <t t-esc="order['amount']"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        
                    </main>
                </div>
            </t>
        </t>
    </template>
</odoo>

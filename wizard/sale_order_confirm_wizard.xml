<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_confirm_wizard" model="ir.ui.view">
        <field name="name">sale.order.confirm.wizard.form</field>
        <field name="model">sale.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Sale Order">
                <group>
                    <field name="sale_id"/>
                    
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm_sale_order" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>
